<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2EA">

    <RelativeLayout
        android:id="@+id/Lila1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/Txt1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nomor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/Iv1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/Txt1"
            android:src="@drawable/ic_create_black_24dp"/>
        <EditText
            android:id="@+id/Edit1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/Iv1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Lila2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/Lila1"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/Txt2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nama"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/Iv2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/Txt2"
            android:src="@drawable/ic_group_black_24dp"/>
        <EditText
            android:id="@+id/Edit2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/Iv2"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Lila3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/Lila2"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/Txt3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Tanggal Lahir"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/Iv3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/Txt3"
            android:src="@drawable/ic_date_range_black_24dp"/>
        <EditText
            android:id="@+id/Edit3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/Iv3"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Lila4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/Lila3"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/Txt4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Jenis Kelamin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/Iv4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/Txt4"
            android:src="@drawable/ic_person_black_24dp"/>
        <EditText
            android:id="@+id/Edit4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/Iv4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Lila5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/Lila4"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/Txt5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Alamat"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id="@+id/Iv5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/Txt5"
            android:src="@drawable/ic_place_black_24dp"/>
        <EditText
            android:id="@+id/Edit5"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@+id/Iv5"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Lila6"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/Lila5"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/Iv6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_save_black_24dp"
            android:layout_marginLeft="50dp"/>
        <Button
            android:id="@+id/Update"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/Iv6"
            android:background="#FFF2EA"
            android:text="SIMPAN"
            android:textColor="#FF0000"
            android:textStyle="bold"/>
    </RelativeLayout>

</RelativeLayout>